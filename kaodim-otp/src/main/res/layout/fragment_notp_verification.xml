<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llNotpRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvVerifying"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="36dp"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                android:visibility="visible"
                tools:text = "Verifying +60 163314187"/>

            <TextView
                android:id= "@+id/tvEditPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="@color/kaodim_blue"
                android:clickable="true"
                android:focusable="true"
                android:background = "?attr/selectableItemBackground"
                android:textSize="15sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/ivHeader"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp" />

            <TextView
                android:id = "@+id/tvNotpSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginTop="8dp"
                android:textAlignment="center"
                android:textColor="#969696"
                android:textSize="16sp"
                android:lineSpacingExtra="4sp"
                android:text = "You will receive a missed call."/>

            <TextView
                android:id = "@+id/tvNotpErrorMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="16dp"
                android:textAlignment="center"
                android:textColor="#cc1616"
                android:textSize="15sp"
                android:lineSpacingExtra="5sp"
                tools:text="Lorem ipsum"/>

            <TextView
                android:id = "@+id/tvNotpSMSCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="40dp"
                android:textAlignment="center"
                android:textColor="@color/kaodim_blue"
                android:textSize="16sp"
                android:lineSpacingExtra="4sp"
                android:background="?attr/selectableItemBackground"
                tools:text="Send me code via SMS"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>

